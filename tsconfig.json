{
  "compilerOptions": {
    "lib": [ "es5" , "es6" ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,  
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ]
}